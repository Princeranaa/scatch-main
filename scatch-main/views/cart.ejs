<%- include('./partials/header') %>

<!-- Cart section -->

<% user.cart.forEach(function(item){ %>
    <div class="w-full h-screen flex items-start px-20 py-20 gap-10 bg-zinc-950 text-white">

        <!-- Left side: Cart items -->
        <div class="w-[30%] rounded-md overflow-hidden">
            <!-- Loop through each product in the cart -->
            <div class="mb-5">
                <div class="w-full h-80 flex justify-center items-center" style="background-color: <%= item.bgcolor %>">
                    <img class="w-full h-[12rem]" src="data:image/jpeg;base64, <%= item.image.toString('base64') %>" />
                </div>
                <div class="w-full flex justify-between px-5 py-4" style="background-color: <%= item.panelcolor %>">
                    <h3 class="text-2xl"><%= item.name %></h3> <!-- Product name -->
                    <div class="flex items-center gap-2">
                        <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
                        <div class="px-2 py-1 rounded-md bg-white text-black"><%= item.quantity %></div> <!-- Product quantity -->
                        <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
                    </div>
                </div>
                <div class="flex items-center justify-between px-5 py-3" style="background-color: <%= item.textcolor %>">
                    <h4 class="text-lg">Net Total</h4>
                    <h2 class="text-lg">₹ <%= item.price %></h2> <!-- Total per product -->
                </div>
            </div>
        </div>

        <!-- Right side: Price breakdown -->
        <div class="w-[70%]">
            <h3 class="text-xl">Price Breakdown</h3>
            <div class="px-10 mt-5">
                <div class="flex mt-2">
                    <h4 class="w-1/3">Total MRP</h4>
                    <h4>₹ <%= item.price %></h4> <!-- Total MRP -->
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Discount on MRP</h4>
                    <h4>₹ <%= item.discount %></h4> <!-- Discount (default to 0 if undefined) -->
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Platform Fee</h4>
                    <h4>₹ 20</h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Shipping Fee</h4>
                    <h4>FREE</h4>
                </div>
            </div>
            <div class="w-full h-[1px] bg-black-950 mt-10"></div>
            <div class="flex mt-5">
                <h3 class="w-1/3 text-xl">Total Amount</h3>
                <h3 class="font-semibold text-xl text-green-600">₹ <%= bill %></h3> <!-- Total amount -->
            </div>
            <form action=""></form>
        </div>
    </div>
<% }) %>

<%- include('./partials/footer') %>
